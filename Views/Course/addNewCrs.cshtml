@model CourseWithDepartmentIDAndNameViewModdel

@{
    SelectList department = new SelectList(Model.dept, "id", "name");
}

<div class="m-auto bt-5 w-25">
    <form asp-action="saveNew" asp-controller="Course" method="post">
    <div class="mb-3">
        <label class="form-label" asp-for="name"></label>
        <input class="form-control" asp-for="name">
       @* @Html.LabelFor(n=> n.name, new{@class="label-control"})
        @Html.TextBoxFor(n=> n.name, new{@class="form-control"})*@
        <span asp-validation-for="name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="degree"></label>
        <input class="form-control" asp-for="degree">
        <span asp-validation-for="degree" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="minDegree"></label>
        <input class="form-control" asp-for="minDegree">
        <span asp-validation-for="minDegree" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="dept_id"></label>
        <select class="form-control" asp-for="dept_id" asp-items="department">

        </select>
    </div>

    <div class="text-center">
        <input type="submit" class="btn btn-success" value="Add">
    </div>
    </form>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<partial name="_ValidationScriptsPartial"></partial>