@model List<Course>

@{
    Layout = "_NewLayout";
}

<table class="table table-bordered" style="border-color:#2c3e5075 !important">
        <tr>
            <th>Name</th>
            <th>Degree</th>
            <th>Min Degree</th>
            <th  class="text-center">Options</th>
        </tr>
        
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.name</td>
                    <td>@course.degree</td>
                    <td>@course.minDegree</td>
                    <td>
                        <div class="text-center">
                            <a class="btn btn-outline-success w-25" asp-action="edit" asp-controller="Course" asp-route-id="@course.id" style="border-color: #3e762178">Edit</a>
                            <a class="btn btn-outline-danger w-25" asp-action="delete" asp-controller="Course" asp-route-id="@course.id" style="border-color: #dc354578">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        
</table>
<a class="btn" asp-action="addNewCrs" asp-controller="Course" style="background-color:#2c3e50 !important; color:#fff">Add New Course</a>
