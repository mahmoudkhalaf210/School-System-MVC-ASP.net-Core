@model CourseWithDepartmentIDAndNameViewModdel
@{
    SelectList department = new SelectList(Model.dept, "id", "name");
}

<div class="m-auto bt-5 w-25">
    <form asp-action="saveEdite" asp-controller="Course" asp-route-id="@Model.id" method="post">
    <div class="mb-3">
        <label class="form-label" asp-for="name"></label>
        <input class="form-control" asp-for="name">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="degree"></label>
        <input class="form-control" asp-for="degree">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="minDegree"></label>
        <input class="form-control" asp-for="minDegree">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="dept_id"></label>
        <select class="form-control" asp-for="dept_id" asp-items="department">

        </select>
    </div>

    <div class="text-center">
        <input type="submit" class="btn btn-success" value="Save">
    </div>
    </form>
</div>




